---
export interface Props {
  title: string;
  description: string;
  image: string;
  imageAlt: string;
  canonicalURL: string;
  type: 'website' | 'article';
}

const { 
  title, 
  description, 
  image,
  imageAlt,
  canonicalURL,
  type
} = Astro.props;

const siteTitle = 'Chismesito Blog';
const fullTitle = `${title} | ${siteTitle}`;

// Aseg√∫rate de que la imagen tenga una URL completa
const fullImageUrl = image.startsWith('http') ? image : new URL(image, Astro.site).toString();

// Imagen por defecto en caso de que no se proporcione una
const defaultImage = new URL('/images/default-og-image.jpg', Astro.site).toString();
---

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="title" content={fullTitle} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={fullImageUrl || defaultImage} />
<meta property="og:image:alt" content={imageAlt || title} />
<meta property="og:site_name" content={siteTitle} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={fullTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={fullImageUrl || defaultImage} />
<meta property="twitter:image:alt" content={imageAlt || title} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />
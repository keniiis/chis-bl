---
export interface Props {
  title: string;
  description: string;
  image?: string;
  canonicalURL?: string;
}

const { 
  title, 
  description, 
  image = '/default-og-image.jpg',
  canonicalURL = new URL(Astro.url.pathname, Astro.site).toString()
} = Astro.props;

const siteTitle = 'Chismesito Blog';
---

<!-- Primary Meta Tags -->
<title>{title} | {siteTitle}</title>
<meta name="title" content={`${title} | ${siteTitle}`} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook

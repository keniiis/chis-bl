<meta property="twitter:image" content="https://res.cloudinary.com/dnxqyczba/image/upload/v1727353583/og-image_wtuwus.webp" />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Favicon -->

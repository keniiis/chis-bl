---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import SchemaOrg from '../components/SchemaOrg.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const featuredPost = sortedPosts[0];
const recentPosts = sortedPosts.slice(1, 4);

const placeholderImage = '/placeholder.jpg';

const schemaHomepage = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Chismesito Blog",
  "url": "https://chismesito.cl",
  "description": "Explora los 칰ltimos chismes y noticias en nuestro blog",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://chismesito.cl/search?q={search_term_string}",
    "query-input": "required name=search_term_string"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Chismesito",
    "logo": {
      "@type": "ImageObject",
      "url": "https://chismesito.cl/logo.png"
    }
  }
};
---

<Layout title="Bienvenido al Chismesito 游뱘" description="Explora los 칰ltimos chismes y noticias en nuestro blog">
  <SchemaOrg schema={schemaHomepage} />
  <h1 class="text-texto-principal text-balance text-center text-black font-bold my-24">Bienvenido al Chismesito 游뱘</h1>
 
  <section class="mb-20">
    <h2 class="text-2xl font-semibold mb-4">칔ltimo Post</h2>
    <div class="flex flex-col lg:flex-row lg:rounded-tr-[325px] lg:rounded-bl-[325px] border bg-[#f7dbed] rounded-lg shadow-lg overflow-hidden">
      <Image 
        src={featuredPost.data.image || placeholderImage}
        alt={featuredPost.data.imageAlt || 'Imagen del post destacado'}
        width={741.64}
        height={384}
        format="webp"
        class="w-full h-96 object-cover" loading="eager" decoding="async"
      />
      <div class="p-6 flex flex-col justify-end">
        <h3 class="text-2xl text-balance font-bold mb-2">{featuredPost.data.title}</h3>
        <p class="text-gray-600 mb-4">{featuredPost.data.description}</p>
        <a href={`/blog/${featuredPost.slug}`} class="inline-block bg-black text-white py-2 px-4 rounded hover:bg-[#272727] transition-colors" aria-label={`Leer m치s sobre ${featuredPost.data.title}`}>
          Leer m치s
        </a>
      </div>
    </div>
  </section>

  <section>
    <h2 class="text-2xl font-semibold mb-4">Posts Recientes</h2>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {recentPosts.map((post) => (
        <article class="bg-[#f7dbed] rounded-lg shadow-lg overflow-hidden">
          <Image 
            src={post.data.image || placeholderImage}
            alt={post.data.imageAlt || 'Imagen del post'}
            width={400}
            height={200}
            format="webp"
            loading="lazy" decoding="async"
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">{post.data.title}</h3>
            <p class="text-gray-600 mb-4">{post.data.description}</p>
            <a href={`/blog/${post.slug}`} class="inline-block bg-black text-white py-2 px-4 hover:bg-[#272727] rounded-3xl transition-colors" aria-label={`Leer m치s sobre ${post.data.title}`}>
              Leer m치s
            </a>
          </div>
        </article>
      ))}
    </div>
  </section>
</Layout>

<style>
  article {
    transition: transform 0.3s ease;
  }
  article:hover {
    transform: translateY(-5px);
  }
</style>